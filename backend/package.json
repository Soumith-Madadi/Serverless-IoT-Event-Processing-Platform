{
  "name": "serverless-event-platform-backend",
  "version": "1.0.0",
  "description": "Backend infrastructure and Lambda functions for the serverless event platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist node_modules",
    "deploy": "cdk deploy --all",
    "deploy:functions": "npm run build && serverless deploy",
    "destroy": "cdk destroy --all",
    "diff": "cdk diff",
    "start:ingestion": "ts-node src/scripts/start-ingestion.ts",
    "start:local": "ts-node src/scripts/start-local.ts"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.864.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.873.0",
    "@aws-sdk/client-dynamodb": "^3.868.0",
    "@aws-sdk/client-eventbridge": "^3.864.0",
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/client-ses": "^3.966.0",
    "@aws-sdk/lib-dynamodb": "^3.868.0",
    "@types/aws-lambda": "^8.10.152",
    "aws-cdk": "^2.1025.0",
    "aws-cdk-lib": "^2.118.0",
    "aws-jwt-verify": "^5.1.0",
    "aws-sdk": "^2.1531.0",
    "axios": "^1.6.2",
    "constructs": "^10.3.0",
    "dotenv": "^16.3.1",
    "jwt-decode": "^4.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
